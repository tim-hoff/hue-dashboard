<script>
 var frm = $('#myform');
    frm.submit(function (ev) {
        $.ajax({
            type: frm.attr('method'),
            url: frm.attr('action'),
            data: frm.serialize(),
            success: function (data) {
                alert('ok');
            }
        });

        ev.preventDefault();
    });


function blinkIcon(icon) {
  icon.repeat().fadeTo(500,0.5).fadeTo(500,1,$).until(15);
}

function blinkLights() {
     $.ajax({ 
        type: "post",
        url: "/light",
        data: "none.",
        success: function (data) 
        {
            blinkIcon($('#lb1'));
        }});
   };

</script>
